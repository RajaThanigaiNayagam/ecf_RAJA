{% extends 'base.html.twig' %}

{% block title %}Hello ClientController!{% endblock %}

{% block body %}

<div class="container p-3 my-3 border row" style="margin: auto; ">
    <div class="col col-sm-5 d-flex justify-content-center">
        <div class="card-text justify-content-center">
            <div class="card-title justify-content-center">
                Entrez le nom a chercher
            </div>
            <input class="clientsname" list="clientsname" name="clientname-list" id="clientname-list">
            <datalist id="clientsname">
                {% for clientsearch in clientssearch %}
                    <option value="{{ clientsearch.getClientName() }}">
                    </option> 
                {% endfor %}
            </datalist> 
            <div class="result1"></div>
            <div class="row">
                <div class="col">
                    <input  type="checkbox" class="client_active_search">
                </div>
                <div class="col">
                    <input  type="checkbox" class="client_inactive_search">
                </div>
            </div>
        </div>
    </div>
    <div class="col col-sm-5 d-flex justify-content-center">
        <div class="card-text justify-content-center">
            <div class="card-title justify-content-center">
                  Entrez l'identification du client a chercher
            </div>
            <input class="clientsid"  list="clientsid" name="clientid-list" id="clientid-list">
            <datalist id="clientsid">
                {% for clientsearchid in clientssearch %}
                    <option value="{{ path('app_cliid', {'id': clientsearchid.getId() }) }}">
                        {{ clientsearchid.getId() }}
                    </option>
                {% endfor %}
            </datalist> 
            <div class="result2"></div>
        </div>
    </div>
</div>


<div class="marginleft">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 border">
        
        {% for client in clients %}
            <div class="col">
                <div class="card shadow p-3 mb-5 bg-white rounded " style="width: 22rem;">
                    <div class="card-body">  
                        <div class="row">
                            <div class="col-sm-3 row-cols-md-3 row-cols-lg-3">
                                <a href="{{ path('app_cliid', {'id': client.getId() }) }}">
                                    <img class="fit-picture" src="{{ client.getLogoUrl() }}" class="card-img-top"  width="70" height="70">
                                </a>
                            </div>
                            <div class="col-sm-9 row-cols-md-9 row-cols-lg-9">
                                <div>
                                    <h5 class="card-title">client name - {{ client.getClientName() }}</h5>
                                    <div class="card-text">
                                        client id - {{ client.getId() }}<br>
                                        Nom - {{ client.getClientName() }}<br>
                                        Description courte     - {{ client.getShortDescription() }}<br>
                                        Url - {{ client.getUrl() }}
                                    </div>
                                </div>
                            </div>
                                <div class="client-active">
                                    client active - {{ client.isActive() }}
                                </div>
                        </div>
                    </div>
                </div>
            </div>

        {% endfor %}
    </div>

</div>
<div id="paginate" class="navigation d-flex justify-content-center pagin-nav">
    {% block page %}
    {% endblock %}

    {{ knp_pagination_render(clients, 'pagina/pagination.html.twig') }}
    
</div>

{% endblock %}